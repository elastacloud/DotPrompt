<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>DotPrompt</PackageId>
    <AssemblyName>DotPrompt</AssemblyName>
    <Description>DotPrompt for managing your prompts in a version controlled way</Description>
    <Authors>Darren Fuller</Authors>
    <Version>0.0.1</Version>
    <Company>Elastacloud</Company>
    <PackageProjectUrl>https://elastacloud.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/elastacloud/DotPrompt</RepositoryUrl>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <LangVersion>default</LangVersion>
    <NoWarn>NU1702</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fluid.Core" Version="2.11.1" />
    <PackageReference Include="OpenAI" Version="2.0.0" />
    <PackageReference Include="YamlDotNet" Version="16.1.3" />
  </ItemGroup>
  
  <Target Name="CopyPackageReadme" BeforeTargets="Build">
    <Message Text="Copying README.md to project path for packaging" Importance="high"/>
    <Copy SourceFiles="../README.md" DestinationFolder="$(ProjectDir)/Docs"/>
  </Target>
  
  <Target Name="CleanCopiedResources" BeforeTargets="Clean">
    <Message Text="Removing files copied for packaging"/>
    <RemoveDir Directories="$(ProjectDir)/Docs"/>
  </Target>
  
  <ItemGroup>
    <None Include="Docs\README.md" Pack="true" PackagePath=""/>
  </ItemGroup>
  
  <ItemGroup>
    <InternalsVisibleTo Include="DotPrompt.Tests" />
  </ItemGroup>

</Project>
